{% extends 'base.html.twig' %}

{% block title %}Pregunta {{ question_number }}{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #2e1d4b; /* Color de fondo Kahoot */
            color: white;
            font-family: 'Arial', sans-serif;
            display: flex; /* Para centrar el contenido verticalmente */
            justify-content: center;
            align-items: center;
            min-height: 100vh; /* Ocupar toda la altura de la ventana */
            margin: 0;
            padding: 20px; /* Un poco de padding para que no se pegue a los bordes */
            box-sizing: border-box; /* Incluir padding en el ancho/alto */
        }
        .kahoot-card {
            background-color: #3b2c5c;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4); /* Sombra más pronunciada */
            padding: 2.5rem; /* Un poco más de padding */
            width: 100%;
            max-width: 900px; /* Ancho máximo para el card */
            animation: fadeIn 1s ease-out; /* Animación de entrada */
        }
        .question-text {
            font-size: 2.5rem; /* Texto de la pregunta más grande */
            margin-bottom: 2.5rem;
            text-align: center;
            line-height: 1.3; /* Espaciado de línea */
            word-wrap: break-word; /* Romper palabras largas para evitar desbordamiento */
        }
        .answers-grid {
            display: grid; /* Usamos CSS Grid para el diseño 2x2 */
            grid-template-columns: 1fr 1fr; /* Dos columnas de igual ancho */
            gap: 15px; /* Espacio entre los botones */
        }
        .btn-kahoot {
            font-size: 1.8rem; /* Botones más grandes */
            font-weight: bold;
            color: white;
            border: none;
            border-radius: 8px;
            transition: transform 0.2s, box-shadow 0.2s; /* Transición para sombra también */
            height: 150px; /* Altura fija para los botones */
            display: flex; /* Para centrar el texto verticalmente */
            justify-content: center;
            align-items: center;
            text-align: center;
            word-wrap: break-word; /* Romper palabras largas dentro del botón */
            padding: 10px; /* Padding interno para el texto del botón */
        }
        .btn-kahoot:hover {
            transform: scale(1.03); /* Un poco menos de escala para que no sea tan brusco */
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.5); /* Sombra al pasar el ratón */
            opacity: 1;
        }
        .btn-kahoot.red { background-color: #E21B3C; }
        .btn-kahoot.blue { background-color: #1368CE; }
        .btn-kahoot.yellow { background-color: #D8BD00; }
        .btn-kahoot.green { background-color: #28A945; }

        /* Ajustes para pantallas más pequeñas */
        @media (max-width: 768px) {
            .question-text {
                font-size: 1.8rem;
            }
            .btn-kahoot {
                font-size: 1.2rem;
                height: 100px;
            }
            .answers-grid {
                grid-template-columns: 1fr; /* En pantallas muy pequeñas, 1 columna */
            }
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>

    <div class="container">
        <div class="kahoot-card">
            <div class="question-text">
                {{ question.text }}
            </div>
            <form action="{{ path('app_quizz_answer', {'id': question.id}) }}" method="post">
                <div class="answers-grid"> {# Usamos nuestra nueva clase CSS Grid #}
                    {% set colors = ['red', 'blue', 'yellow', 'green'] %}
                    {% for answer in question.answers %}
                        <button class="btn btn-kahoot {{ colors[loop.index0] }}" type="submit" name="answer" value="{{ answer.id }}">
                            {{ answer.text }}
                        </button>
                    {% endfor %}
                </div>
            </form>
        </div>
    </div>
{% endblock %}