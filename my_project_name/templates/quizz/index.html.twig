{% extends 'base.html.twig' %}

{% block title %}Mi Quizz{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Mi Quizz</h1>
    <hr>
    
    <form action="{{ path('app_quizz') }}" method="post">
        {% for question in questions %}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">{{ loop.index }}. {{ question.text }}</h5>
                </div>
                <div class="card-body">
                    {% for answer in question.answers %}
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="question_{{ question.id }}" id="answer_{{ answer.id }}" value="{{ answer.id }}">
                            <label class="form-check-label" for="answer_{{ answer.id }}">
                                {{ answer.text }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}

        <button type="submit" class="btn btn-primary mt-3">Corregir y ver resultados</button>
    </form>
</div>
{% endblock %}