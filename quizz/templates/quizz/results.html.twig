{% extends 'base.html.twig' %}

{% block title %}Resultados del Quizz{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #2e1d4b;
            color: white;
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }
        .result-card {
            background-color: #3b2c5c;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
            padding: 2rem;
            width: 100%;
            max-width: 600px;
            animation: fadeIn 1s ease-out;
        }
        .result-heading {
            font-size: 3rem;
            font-weight: bold;
            color: #ffde0d;
        }
        .score-display {
            font-size: 4rem;
            font-weight: bold;
            color: #fff;
        }
        .btn-kahoot-again {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2e1d4b; /* Color de texto oscuro para que resalte */
            background-color: #f7d540; /* Un color de botón vibrante */
            border: none;
            border-radius: 8px;
            padding: 15px 30px;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn-kahoot-again:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
            opacity: 0.9;
            color: #2e1d4b;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="result-card text-center w-100" style="max-width: 600px;">
            <h1 class="result-heading">¡Quizz Completado! 🎉</h1>
            <p class="score-display">Puntuación: {{ score }} / {{ totalQuestions }}</p>
            <hr class="bg-white">
            
            {% if score == totalQuestions %}
                <div class="alert alert-success mt-4">
                    <h4 class="alert-heading">¡Felicidades!</h4>
                    <p>¡Has respondido todas las preguntas correctamente. Eres un genio del conocimiento! 🚀</p>
                </div>
            {% elseif score > totalQuestions / 2 %}
                <div class="alert alert-info mt-4">
                    <h4 class="alert-heading">¡Muy bien!</h4>
                    <p>Has tenido un gran desempeño. ¡Sigue así para convertirte en un experto! 👍</p>
                </div>
            {% else %}
                <div class="alert alert-warning mt-4">
                    <h4 class="alert-heading">¡Puedes mejorar!</h4>
                    <p>No te preocupes, el conocimiento se construye con la práctica. Inténtalo de nuevo para dominar el tema. 💪</p>
                </div>
            {% endif %}

            <div class="mt-4">
                <a href="{{ path('app_quizz_start') }}" class="btn btn-kahoot-again">Volver a intentarlo</a>
            </div>
        </div>
    </div>
{% endblock %}